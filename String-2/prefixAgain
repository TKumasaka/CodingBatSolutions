public String repeatSeparator(String word, String sep, int count) {
  StringBuilder sb = new StringBuilder();
  String s = word;
  if(count > 1){
    for(int i = 0; i < count-1; i++){
      sb.append(word);
      sb.append(sep);}
    sb.append(word);
    s = sb.toString();}
  else if(count < 1){
     s = "";}
  return s;
}
