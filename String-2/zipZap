public String zipZap(String str) {
  StringBuilder sb = new StringBuilder();
  for(int i = 0; i < str.length(); i++){
    if(str.length() >= 3 && str.charAt(i)=='z' && str.charAt(i+2)=='p'){
      sb.append("zp");
      i+=2;}
    else{
      sb.append(str.charAt(i));}
  }
  str = sb.toString();
  return str;
}
