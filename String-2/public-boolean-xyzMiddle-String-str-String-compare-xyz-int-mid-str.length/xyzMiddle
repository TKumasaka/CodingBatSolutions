public boolean xyzMiddle(String str) {
  String compare = "xyz";
  int mid = str.length()/2;
  boolean balanced = false;
  if(str.length() < 3){
    return false;}
  else if(str.length()%2 == 1 && str.substring(mid-1,mid+2).contains(compare)){   
    return true;}
  else if(str.length()%2 == 0 && str.substring(mid-2,mid+2).contains(compare)){   
    return true;}
  return balanced;
}
